//打印出九九乘法表
#include<stdio.h>

int main()
{
	int n,i,p;

	p=1;
	
	for(n=1;n<=9;n++)
	{
		for(i=1;i<=9;i++)
		{
			p = n * i;
			printf("%d ",p);
		}
		printf("\n");
	}
	return 0;
}

